<Window x:Class="DiagramTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800"
        DataContext="{Binding Source={StaticResource vm}}">
    <Window.Resources>
        <ResourceDictionary Source="Resources/Dictionary1.xaml" />
    </Window.Resources>
    <StackPanel>
        <Ribbon x:Name="RibbonWin"  SelectedIndex="0">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu KeyTip="F">
                    <RibbonApplicationMenuItem Header="Load" ImageSource="images/folder64.png" />
                    <RibbonSeparator></RibbonSeparator>
                    <RibbonApplicationMenuItem Header="Save" ImageSource="images/save64.png" />
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
            <RibbonTab Header="Home">
                <RibbonGroup>
                    <RibbonSplitButton LargeImageSource="images/clipboard64.png" Label="Paste">
                        
                    </RibbonSplitButton>
                    <StackPanel>
                        <RibbonButton SmallImageSource="images/copy32.png" Label="Copy"/>
                        <RibbonButton SmallImageSource="images/scissors32.png" Label="Cut"/>
                    </StackPanel>
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        <Grid>
            <ItemsControl ItemsSource="{Binding Klasses}"/>
        </Grid>
        </StackPanel>
</Window>
