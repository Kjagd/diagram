<Window x:Class="DiagramTool.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Diagram tool" Height="600" Width="800"
        DataContext="{Binding Source={StaticResource vm}}">
    <Window.Resources>
        <ResourceDictionary Source="Resources/Dictionary1.xaml" />
    </Window.Resources>
    <StackPanel>
        <Grid>
            <ItemsControl ItemsSource="{Binding Relations}"/>
            <ItemsControl ItemsSource="{Binding Klasses}"/>
        </Grid>
        <Ribbon x:Name="RibbonWin"  SelectedIndex="0">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu KeyTip="F" Label="File" LargeImageSource="images/folder32.png">
                    <RibbonApplicationMenuItem Header="Load" ImageSource="images/folder64.png" />
                    <RibbonSeparator></RibbonSeparator>
                    <RibbonApplicationMenuItem Header="Save" ImageSource="images/save64.png" />
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
            <RibbonTab Header="Edit">
                <RibbonGroup Header="Clipboard &amp; history">
                    <RibbonButton LargeImageSource="images/clipboard32.png" Label="Paste" Command="{Binding PasteClassCommand}" />
                    <StackPanel>
                        <RibbonButton SmallImageSource="images/scissors16.png" Label="Cut" Command="{Binding CutClassCommand}" />
                        <RibbonButton SmallImageSource="images/copy16.png" Label="Copy" Command="{Binding CopyClassCommand}" />
                    </StackPanel>
                    <RibbonButton LargeImageSource="images/undo32.png" Label="Undo" Command="{Binding UndoCommand}" />
                    <RibbonButton LargeImageSource="images/redo32.png" Label="Redo" Command="{Binding RedoCommand}" />
                </RibbonGroup>
                <RibbonGroup Header="Classes">
                    <RibbonButton LargeImageSource="images/newclass32.png" Label="New Class" Command="{Binding NewClassCommand}"/>
                    <RibbonButton LargeImageSource="images/deleteclass32.png" Label="Delete Class" Command="{Binding DeleteClassCommand}" />

                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        </StackPanel>
</Window>
